<%= form_for [:admin, @user] do |f| %>
  <%= f.label "firstname", "First Name: " %>
  <%= f.text_field "firstname" %><br/>
  <%= f.label "lastname", "Last Name: " %>
  <%= f.text_field "lastname" %><br/>
  <%= f.label "email", "E-mail: " %>
  <%= f.email_field "email" %><br/>
  <%= f.label "Admin? " %>
  <%= f.check_box :admin %><br/>
  <%= f.submit "Edit" %><br/>
<% end %> 